#group-notification  
  .header-box
    =image_tag('/assets/images/BirdTxt_Icons_Group.jpg')
    %h4 send group txt
  = bootstrap_form_for @group_notification, inline_errors: false do |f|
    .darker-box
      = f.alert_message "Please fix the errors below."
      = f.select :group_id, options_for_select([["Choose a group from this list", nil]].concat( @groups.all.map {|g| [g.name + ' (' + g.customers.count.to_s + ' customers)', g.id]})), hide_label: true
      %span.white 
        or 
        =link_to "create a new group here", groups_path
      =f.text_area :group_message, class: "form-control", :placeholder => "Type your message here. You can use up to 50 characters", hide_label: true
      .form-actions
        %button.btn.btn-sm.main-btn{:type => "submit"}
          send it!
