#notifications
  .row
    .col-sm-6
      #tabs
        .notification-alert
        %ul
          %li= link_to 'individual', "#tabs-1"
          %li= link_to 'group', "#tabs-2"
        #tabs-1
          #individual-notification  
            =render 'notification_form'
        #tabs-2
          #group-notification
            =render 'group_notification_form', object: @group_notification
    .col-sm-6
      .queue-alert
      #txt-queue
        =render 'txt_queue'

-@customer_array = "[{phone: '9546381523' ,label: 'Bob 9546381523', value: 'Bob'}, {phone: '3055551234' ,label: 'Bobby Smith 3055551234', value: 'Bobby Smith'}]"
            
%script{:src => "//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"}
%script{:src => "/assets/js/jquery.maskedinput.min.js"}
:javascript
  $(document).ready(function(){
    $( "#tabs" ).tabs();  
  });
:javascript
  $(document).ready(function(){
    $.mask.definitions['~']='[+-]';
    $('.input-mask-phone').mask('(999) 999-9999');
  });
:javascript
  $(document).ready(function() {
    var availableTags = #{@customer_array};
    
    var ac_config = { 
      source: availableTags, 
      select: function(event, ui){ 
        $("#phone").val(ui.item.phone); 
        }, 
        minLength:1 
      };

    $("#customer").autocomplete(ac_config);
  });  
