<% if @group_notification.valid? %>
  $("#group-notification").html("<%= escape_javascript(render partial: 'notifications/group_notification_form', locals: {object: GroupNotification.new} ) %>");
  $(".notification-alert").html("<%= flash[:success] %>");
  $('.notification-alert').effect("highlight", {}, 1500);
<% else %>
  $("#group-notification").html("<%= escape_javascript(render partial: 'notifications/group_notification_form', locals: {object: @group_notification} ) %>");
  $(".notification-alert").html("");
<% end %>

$(".queue-alert").html("");
<% @group_notification.errors.clear %>

